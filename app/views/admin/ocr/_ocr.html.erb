<div class="ocr-src-panel">
   <div class="ocr-controls">
      <label for="language">Language:</label>
      <select id='language'>
         <option value="" disabled>Select a language</option>
         <% langs.each do |lang| %>
            <% sel = ""
               sel = 'selected="selected"' if lang == "eng"
            %>
            <option <%= sel %> value="<%= lang %>"><%= lang.upcase  %></option>
         <% end %>
      </select>
      <span class="ocr-button<% if working %> disabled<% end %>" id="start-ocr">Start OCR</span>
      <div id="ocr-status-message" data-job-id="<%= job_id %>"><% if working %>OCR in progress...<% end %></div>
   </div>
   <p>Hover over the image to zoom in</p>
   <img src="/admin/ocr/zoom?mf=<%= mf.id %>" id="src-img"/>
</div>
